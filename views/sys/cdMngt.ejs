<!DOCTYPE html>
<html>
    <head>
        <title>코드 관리</title>
        <% include sys/inc/_jscss %>
        <script type="text/javascript">
            $(document).ready(function () {
                $("#tblList > tbody > tr").dblclick(function () {
                    
                    let _this = $(this);
                    
                    location.href = "/sys/cdDtl?procDiv=U&CD_GRP=" + _this.attr("keyVal") + "&CD_VAL=" + _this.attr("keyVal2");
                });
            });
        </script>
    </head>
<body>

<% include sys/inc/_header %>
<% include sys/inc/_navSys %>

    <!-- Begin page content -->
    <main role="main">
      <div class="container">
        <div class="mr30"></div>
        <h1>코드 관리</h1>
        <h2>코드 그룹 - <%= CD_GRP %></h2>
            <div class="col-sm text-right">
                <button type="button" class="btn btn-success" onclick="location.href='/sys/cdDtl?procDiv=C&CD_GRP=<%= CD_GRP %>'" >신규등록</button>
            </div>
            <div class="mr20"></div>
            <div class="col-sm">
                <table class="table table-bordered" id="tblList">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">코드</th>
                            <th scope="col">코드명</th>
                            <th scope="col">정렬순서</th>
                            <th scope="col">사용여부</th>
                            <th scope="col">#</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (list.length == 0) { %>
                        <tr>
                            <td class="text-center" colspan="6" scope="row">검색 결과가 없습니다</td>
                        </tr>
                        <% } else {
                            for (let idx = 0, _max = list.length ; idx < _max ; idx ++) {
                                let row = list[idx]; %>
                        <tr style="cursor:pointer;" keyVal="<%= row["CD_GRP"] %>" keyVal2="<%= row["CD_VAL"] %>">
                            <th scope="row" class="text-center"><%= idx + 1 %></th>
                            <td><%= row["CD_VAL"] %></td>
                            <td><%= row["CD_NM"] %></td>
                            <td><%= row["DSP_SEQ"] %></td>
                            <td><%= row["USE_YN"] %></td>
                            <td><button type="button" class="btn btn-danger" onclick="location.href='/sys/cdDtl?procDiv=D&CD_GRP=<%=row["CD_GRP"] %>&CD_VAL=<%=row["CD_VAL"] %>'"><i class="fa fa-trash" aria-hidden="true"></i></button></td>
                        </tr>
                        <% } 
                        } %>
                    </tbody>
                </table>
            </div>
        </div>
    </main>

<% include sys/inc/_footer %>
</body>
</html>