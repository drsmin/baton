<!DOCTYPE html>
<html>
    <head>
        <title>동영상 등록</title>
        <% include sys/inc/_jscss %>
        <link rel='stylesheet' href='/css/stickyFooter.css' /> 
        <script type="text/javascript">
            $(document).ready(function() {
                $("button.close").click(function () {
                    window.self.close();
                });
            });
            
            function upload() {
                document.forms[0].submit();
            }
            
            <% if (typeof(attcFileSeq) != "undefined") { %>
            window.onload = function () {
                opener._regMovPopCb_<%= div %>('<%= attcFileSeq %>');
                
                alert("등록 되었습니다");
                window.self.close();
            }
            <% } %>
        </script>
    </head>
<body>

    <header>
        <!-- Fixed navbar -->
        <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
            <a class="navbar-brand" href="">동영상 등록</a>
            <button type="button" class="close bg-light" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </nav>
    </header>

    <!-- Begin page content -->
    <main role="main" class="container">
        <form name="form" method="post" enctype="multipart/form-data">
            <input type="file" id="file" name="file" required="true"/>
            <input type="hidden" value="<%= div %>" />
        </form>
    </main>

    <nav class="navbar fixed-bottom navbar-expand-sm navbar-light bg-light">
        <div class="container text-center">
            <div class="col-sm">
                <button type="button" class="btn btn-primary" onclick="upload()">등록</button>
                <button type="button" class="btn btn-secondary" onclick="window.self.close()">취소</button>
            </div>
        </div>
    </nav>
</body>
</html>