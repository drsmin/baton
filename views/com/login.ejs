<% if(typeof(_message) == 'undefined') {
        var _message = false; 
    }
    console.log("_message [%s]", _message);
%>
<!DOCTYPE html>
<html>
    <head>
        <title>로그인</title>
        <% include sys/inc/_jscss %>
        <script type="text/javascript">
            <% if (_message) { %>
                alert("<%= _message %>");
            <% } %>
            
            function fbLogin() {
            	// 로그인 여부 체크
            	FB.getLoginStatus(function(response) {
            
            		if (response.status === 'connected') {
            			FB.api('/me', function(res) {

            				console.log("Success Login : " + JSON.stringify(res));
            			});
            		} else if (response.status === 'not_authorized') {
            			// 사람은 Facebook에 로그인했지만 앱에는 로그인하지 않았습니다.
            			alert('앱에 로그인해야 이용가능한 기능입니다.');
            		} else {
            			// 그 사람은 Facebook에 로그인하지 않았으므로이 앱에 로그인했는지 여부는 확실하지 않습니다.
            			alert('페이스북에 로그인해야 이용가능한 기능입니다.');
            		}
            	}, true); // 중복실행방지
            }

        </script>
    </head>
<body>
<% include com/inc/_facebook %>
<% include sys/inc/_header %>

    <!-- Begin page content -->
    <main role="main">
        <div class="container">
            <div class="mr30"></div>
            
            <div class="row marketing text-center">
                <div class="col-lg-4"></div>
                <div class="col-lg-4">
                    <h1>로그인</h1>
                    <p><div class="fb-login-button" scope="public_profile,email" onlogin="fbLogin();" data-max-rows="1" data-size="large" data-button-type="continue_with" data-show-faces="false" data-auto-logout-link="true" data-use-continue-as="true"></div>
                    </p>
                    
                    <p><i class="fa fa-google-plus-official fa-5x" aria-hidden="true"></i></p>
                    
                    <p> OR </p>
                    
                    <form action="/com/login.do" method="post">
                        <div class="form-group">
                            <input type="email" class="form-control" id="userId" name="userId" placeholder="이메일 입력">
                        </div>
                        <div class="form-group">
                            <input type="password" class="form-control" id="userPw" name="userPw" placeholder="패스워드 입력">
                        </div>
                        <div class="form-group">
                            <button type="submit" class="form-control btn btn-success">로그인</button>
                        </div>
                    </form>
                </div>
            </div><!--row-->
        </div> <!-- Container -->
    </main>

<% include sys/inc/_footer %>
</body>
</html>